<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/f4_button_backToMain"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/back_To_Main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/f4_textView_Titel_whoNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="19dp"
        android:text="@string/title_next_player"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/f4_textView2"
        app:layout_constraintEnd_toEndOf="@+id/f4_textView2"
        app:layout_constraintStart_toStartOf="@+id/f4_textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f4_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="193dp"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/f4_button_backToMain"
        app:layout_constraintEnd_toEndOf="@+id/f4_button_backToMain"
        app:layout_constraintStart_toStartOf="@+id/f4_button_backToMain"
        app:layout_constraintTop_toBottomOf="@+id/f4_textView_Titel_whoNext" />

    <TextView
        android:id="@+id/f4_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="200dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>